# Kids Messenger Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Authentication (Production: Use strong secrets)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# Data Encryption (Production: Use strong encryption key)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-256-bit-encryption-key-in-hex

# Database Configuration (When implementing persistent storage)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kids_messenger
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_SSL=true

# AI Content Filtering (Optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# WebSocket Configuration
WS_MAX_CONNECTIONS=10000
WS_PING_INTERVAL=30000

# Message Configuration
MESSAGE_MAX_LENGTH=10000
MESSAGE_HISTORY_LIMIT=1000

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=100
MAX_CONNECTIONS_PER_IP=1000
API_RATE_LIMIT=100

# CORS Configuration
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:19006,http://localhost:8081

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/kids-messenger/app.log

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
COOKIE_SECURE=false

# File Upload (Future feature)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Email Configuration (For notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Kids Messenger <noreply@example.com>

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PHONE=+1234567890

# Feature Flags
ENABLE_AI_FILTERING=true
ENABLE_IMAGE_FILTERING=false
ENABLE_VOICE_MESSAGES=false
ENABLE_VIDEO_CHAT=false
ENABLE_PARENTAL_CONTROLS=true
