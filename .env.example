# KIKU Project Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# AI Services Configuration
# ============================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API Base URL (optional, defaults to https://api.openai.com/v1)
# OPENAI_API_BASE_URL=https://api.openai.com/v1

# AI Provider Selection
# Options: 'local' | 'openai' | 'anthropic' | 'custom'
AI_PROVIDER=local

# ============================================
# Google Cloud Services (for Vision API)
# ============================================

# Google Cloud Project ID
# GOOGLE_CLOUD_PROJECT_ID=your_project_id

# Google Cloud API Key (for Vision API)
# GOOGLE_VISION_API_KEY=your_google_vision_api_key

# ============================================
# Backend Configuration
# ============================================

# Backend API URL
# For development: http://localhost:3000
# For production: https://your-backend-url.com
BACKEND_URL=http://localhost:3000

# tRPC Endpoint
TRPC_URL=http://localhost:3000/trpc

# ============================================
# Database Configuration
# ============================================

# PostgreSQL Connection String
# Format: postgresql://user:password@host:port/database
# DATABASE_URL=postgresql://user:password@localhost:5432/kiku

# Redis Connection String (for caching)
# REDIS_URL=redis://localhost:6379

# ============================================
# Security & Authentication
# ============================================

# JWT Secret (for backend authentication)
# JWT_SECRET=your_jwt_secret_here

# Encryption Key (for sensitive data)
# ENCRYPTION_KEY=your_encryption_key_here

# ============================================
# Monitoring & Analytics
# ============================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# Analytics API Key
# ANALYTICS_API_KEY=your_analytics_key

# ============================================
# Feature Flags
# ============================================

# Enable/disable features
# ENABLE_AI_ANALYSIS=true
# ENABLE_GOOGLE_VISION=false
# ENABLE_SENTRY=true

# ============================================
# Development
# ============================================

# Development mode
NODE_ENV=development

# Enable debug logging
DEBUG=false
