import React from 'react';
import { StyleSheet, Text, TouchableOpacity } from 'react-native';
import { Moon, Sun } from 'lucide-react-native';
import { useThemeMode } from '@/constants/ThemeContext';
import { HapticFeedback } from '@/constants/haptics';
import { jsx as _jsx, jsxs as _jsxs } from "react/jsx-runtime";
export function ThemeModeToggle(_ref) {
  var _ref$variant = _ref.variant,
    variant = _ref$variant === void 0 ? 'compact' : _ref$variant,
    style = _ref.style,
    _ref$testID = _ref.testID,
    testID = _ref$testID === void 0 ? 'theme-toggle-button' : _ref$testID;
  var _useThemeMode = useThemeMode(),
    themeMode = _useThemeMode.themeMode,
    toggleThemeMode = _useThemeMode.toggleThemeMode,
    theme = _useThemeMode.theme;
  var isCompact = variant === 'compact';
  var label = themeMode === 'sunrise' ? isCompact ? 'День' : 'Светлый режим' : isCompact ? 'Ночь' : 'Ночной режим';
  return _jsxs(TouchableOpacity, {
    onPress: function onPress() {
      HapticFeedback.selection();
      toggleThemeMode();
    },
    style: [styles.toggle, isCompact ? styles.compact : styles.expanded, {
      backgroundColor: theme.chipBackground,
      borderColor: theme.accentPrimary
    }, style],
    activeOpacity: 0.85,
    testID: testID,
    children: [themeMode === 'sunrise' ? _jsx(Sun, {
      size: isCompact ? 16 : 20,
      color: theme.chipText
    }) : _jsx(Moon, {
      size: isCompact ? 16 : 20,
      color: theme.chipText
    }), _jsx(Text, {
      style: [styles.toggleText, {
        color: theme.chipText
      }],
      children: label
    })]
  });
}
var styles = StyleSheet.create({
  toggle: {
    flexDirection: 'row',
    alignItems: 'center',
    borderRadius: 999,
    borderWidth: 1
  },
  compact: {
    paddingHorizontal: 12,
    paddingVertical: 6
  },
  expanded: {
    paddingHorizontal: 18,
    paddingVertical: 10
  },
  toggleText: {
    fontSize: 13,
    fontWeight: '700',
    marginLeft: 8
  }
});
